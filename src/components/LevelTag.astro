---
const { level } = Astro.props;
---

<div
    class="text-xs inline-flex items-center font-bold leading-sm uppercase px-2 py-1 rounded-full"
    class:list={[
        {
            "bg-white text-gray-700 border": level === 1,
            "bg-blue-200 text-blue-700": level === 2,
            "bg-red-200 text-red-700": level === 3,
            "bg-gray-500 text-gray-100": level === 4,
            "bg-gray-800 text-gray-100": level === 5,
        },
    ]}
>
    <svg
        stroke="currentColor"
        fill="currentColor"
        stroke-width="0"
        viewBox="0 0 16 16"
        height="1em"
        width="1em"
        xmlns="http://www.w3.org/2000/svg"
        ><path d="M12.238 8l-2.31 4H5.31L3 8l2.31-4h4.618l2.31 4z"></path></svg
    >
    {
        level === 1
            ? `blanche`
            : level === 2
            ? `bleue`
            : level === 3
            ? `rouge`
            : level === 4
            ? `banco`
            : level === 5
            ? `super banco`
            : ``
    }
</div>
